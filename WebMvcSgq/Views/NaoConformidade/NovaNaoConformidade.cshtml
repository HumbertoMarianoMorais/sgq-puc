@model WebMvcSgq.Models.tbl_NaoConformidade

@{
    ViewBag.Title = "Gerar Não Conformidade";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Gerar Não Conformidade</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @using (Html.BeginForm("NovaNaoConformidade", "NaoConformidade", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.IdAtividadeDiaria, "AtividadeDiaria", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("IdAtividadeDiaria", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdAtividadeDiaria, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IdProcesso, "Processo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("IdProcesso", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdProcesso, "", new { @class = "text-danger" })
                </div>
            </div>

        }


        <div class="form-group">
            @Html.LabelFor(model => model.DsNaoConformidade, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.DsNaoConformidade, new { @class = "form-control", @maxLength = 100 })
                @Html.ValidationMessageFor(model => model.DsNaoConformidade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Dstatus, "Status Resolvido:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.Dstatus, new { htmlAtributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dstatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

